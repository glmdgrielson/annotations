      <anchoredRegion x="25.97100" y="41.11100" w="29.85400" h="13.33300" sx="43.2039985657" sy="56.6669998169" t="0:04:02.6"/>
      <anchoredRegion x="25.97100" y="41.11100" w="29.85400" h="13.33300" sx="43.2039985657" sy="56.6669998169" t="0:04:05.2"/>
